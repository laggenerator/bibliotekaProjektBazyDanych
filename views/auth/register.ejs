<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2>Rejestracja</h2>
      <p>Utwórz swoje konto</p>
    </div>

    <% if (locals.error) { %>
      <div class="alert alert-error">
        <%= locals.error %>
      </div>
    <% } %>

    <% if (locals.sukces) { %>
      <div class="alert alert-sukces">
        <%= locals.sukces %>
      </div>
    <% } %>

    <form action="/auth/register" method="POST" class="auth-form"> 
      <div class="form-group">
        <label for="nazwa_uzytkownika" class="form-label">Nazwa użytkownika</label>
        <input type="text" id="nazwa_uzytkownika" name="nazwa_uzytkownika" class="form-input" value="<%= formData && formData.nazwa_uzytkownika || ''%>" required>
      </div>

      <div class="form-group">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-input" value="<%= formData && formData.email || ''%>" required>
      </div>

      <div class="form-group">
        <label for="haslo" class="form-label">Hasło</label>
        <input type="password" id="haslo" name="haslo" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="potwierdz_haslo" class="form-label">Potwierdź hasło</label>
        <input type="password" id="potwierdz_haslo" name="potwierdz_haslo" class="form-input" required>
      </div>

      <button type="submit" class="auth-btn">
        Zarejestruj się
      </button>
    </form>

    <div class="auth-links">
      <p>Masz już konto? <a href="/auth/login" class="auth-link">Zaloguj się</a></p>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const hasloInput = document.getElementById('haslo');
  const potwierdzHasloInput = document.getElementById('potwierdz_haslo');
  const form = document.querySelector('form');
  
  function validatePasswords() {
    const haslo = hasloInput.value;
    const potwierdzHaslo = potwierdzHasloInput.value;
    
    if (potwierdzHaslo && haslo !== potwierdzHaslo) {
      potwierdzHasloInput.style.borderColor = 'var(--red-accent)';
      return false;
    } else {
      potwierdzHasloInput.style.borderColor = '';
      return true;
    }
  }
  
  potwierdzHasloInput.addEventListener('input', validatePasswords);
  hasloInput.addEventListener('input', validatePasswords);
  
  form.addEventListener('submit', function(e) {
    if (!validatePasswords()) {
      e.preventDefault();
      alert('Hasła nie są identyczne!');
    }
  });
});
</script>